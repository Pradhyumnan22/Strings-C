#include <stdio.h>
#include <string.h>
int main() {
    char str[100];
    char reversed[100];
    int length, i;
    fgets(str, sizeof(str), stdin);
    str[strcspn(str, "\n")] = '\0'; 
    length = strlen(str);
    for (i = 0; length>i; i++) {
        reversed[i] = str[length - 1 - i]; /
    }
    for (i = 0; i < length; i++) {
        if (i % 2 != 0) {
            printf("%c", reversed[i]); 
        }
    }
    printf("\n");
}
